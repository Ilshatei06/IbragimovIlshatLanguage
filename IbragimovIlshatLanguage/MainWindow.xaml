<Window x:Class="IbragimovIlshatLanguage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IbragimovIlshatLanguage"
        mc:Ignorable="d"
        Title="брагимов Ильшат" Height="450" Width="800" MinHeight="500" MinWidth="1000" FontFamily="Comic Sans MS" Icon="image/school_logo.ico" Background="#FFE7FABF">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Image Source="image/school_logo.png" HorizontalAlignment="Left"></Image>
        <TextBlock Text="Ибрагимов Ильшат Лангуаге" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <StackPanel>
            <Button Content="Назад" Name="BtnBack" HorizontalAlignment="Right" Click="BtnBack_Click" Margin="5"></Button>
        </StackPanel>

        <Frame Grid.Row="1" Name="MainFrame" ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility="Hidden" Background="White"></Frame>

    </Grid>
</Window>
