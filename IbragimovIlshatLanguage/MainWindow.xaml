<Window x:Class="IbragimovIlshatLanguage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IbragimovIlshatLanguage"
        mc:Ignorable="d"
        Title="Ибрагимов Ильшат" Height="700" Width="1200" MinHeight="700" MinWidth="1200" FontFamily="Comic Sans MS" Icon="image/school_logo.ico" Background="#FFE7FABF">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Image Source="image/school_logo.png" HorizontalAlignment="Left"></Image>
        <TextBlock Text="Ибрагимов Ильшат Лангуаге" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <Button Content="Назад" Name="BtnBack" Click="BtnBack_Click" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 25 0"></Button>
        
        <Frame Grid.Row="1" Name="MainFrame" ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility="Hidden" Background="White"></Frame>

    </Grid>
</Window>
